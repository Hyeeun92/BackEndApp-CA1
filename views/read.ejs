<html lang="en">

<head>
    <link href="../style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <h3>List of Gym Members</h3>

    <div>
        Full name : <%= member.name %>
    </div>

    <div>
        Gender : <%= member.gender %>
    </div>

    <div>
        Year of Birth : <%= member.yearOfBirth%>
    </div>

    <div>
        Personal training : <%if (member.personalTraining==true) {%> Yes
            <%} else {%> No <%}%>
    </div>

    <div>
        <label>Facility</label>
    </div>

    <div>1.Locker : <%if (member.facility.locker==true) {%> Yes
            <%} else {%> No <%}%>
    </div>

    <div>2.Poor : <%if (member.facility.locker==true) {%> Yes
            <%} else {%> No <%}%>
    </div>

    <div>3.Shower : <%if (member.facility.shower==true) {%> Yes
            <%} else {%> No <%}%>
    </div>
    <button id="readButton" onclick="location.href='/delete/<%= member._id %>'">Delete</button>
    <button id="readButton" onclick="location.href='/update/<%= member._id %>'">Update</button>
    <button id="readButton" onclick="location.href='/'">Back</button>

</body>

</html>